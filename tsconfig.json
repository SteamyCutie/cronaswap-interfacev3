{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "app/animations": ["./animations"],
      "app/animations/*": ["./animations/*"],
      "app/components": ["./components"],
      "app/components/*": ["./components/*"],
      "app/configs": ["./configs"],
      "app/configs/*": ["./configs/*"],
      "app/constants": ["./constants"],
      "app/constants/*": ["./constants/*"],
      "app/entities": ["./entities"],
      "app/entities/*": ["./entities/*"],
      "app/enums": ["./enums"],
      "app/enums/*": ["./enums/*"],
      "app/features": ["./features"],
      "app/features/*": ["./features/*"],
      "app/functions": ["./functions"],
      "app/functions/*": ["./functions/*"],
      "app/guards": ["./guards"],
      "app/guards/*": ["./guards/*"],
      "app/hooks": ["./hooks"],
      "app/hooks/*": ["./hooks/*"],
      "app/interfaces": ["./interfaces"],
      "app/interfaces/*": ["./interfaces/*"],
      "app/layouts": ["./layouts"],
      "app/layouts/*": ["./layouts/*"],
      "app/modals": ["./modals"],
      "app/modals/*": ["./modals/*"],
      "app/services": ["./services"],
      "app/services/*": ["./services/*"],
      "app/states": ["./states"],
      "app/states/*": ["./states/*"],
      "app/types": ["./types"],
      "app/types/*": ["./types/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
